<UserControl x:Class="Simple_Assignment_Manager.UserControls.GPADashboardUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Simple_Assignment_Manager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="DarkSlateGray">
        <ScrollViewer Margin="30 10 30 10" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0 10 0 0">
                <local:GPAStatCardControl x:Name="actual_gpa_card" Height="140" Width="300" Margin="0 0 0 20"/>

                <local:GPAStatCardControl x:Name="best_case_gpa_card" Height="140" Width="300" Margin="0 0 0 20"/>

                <local:GPAStatCardControl x:Name="worst_case_gpa_card" Height="140" Width="300" Margin="0 0 0 20"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
